    <input type="hidden" name="party-id" value="{{party.id}}"/>
    <div>
      <label class="form-label">Party Name:</label>
      <input class="form-input" type="text" name="party-name"/>
    </div>
    <div>
      <label class="form-label">Location:</label>
      <input class="form-input" type="text" name="party-location"/>
    </div>
    <div id="datetimepicker1" data-target-input="nearest">
      <label class="form-label">Date:</label>
      <input class="form-input" id="basicDate" type="text" name="party-date" placeholder="Time &amp; Date" >
      {{!-- <input class="form-input" type="text" name="party-date"/> --}}
    </div>
    {{!-- <div>
      <label class="form-label">Description:</label>
